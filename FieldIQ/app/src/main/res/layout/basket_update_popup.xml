<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/PrimaryColor"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Update Basket Quantity"/>
    <EditText
        android:id="@+id/basketpickupqty"
        android:layout_below="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter no of item"
        android:layout_margin="5dp"
        android:inputType="number"
        style="@style/Widget.AppCompat.EditText"/>
    <Button
        android:id="@+id/basket_button_ok"
        android:layout_below="@id/basketpickupqty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_button_failed_ok"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="5dp"
        android:background="@color/PrimaryColor"/>
</RelativeLayout>
