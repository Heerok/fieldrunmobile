<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/imagerl"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconimage"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user_profile"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/versionno"
            android:layout_below="@+id/iconimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click To Change"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/PrimaryColor"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_below="@+id/imagerl"
        android:layout_above="@+id/updaterl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/border">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:id="@+id/top_up_inner_content_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:id="@+id/firstname"
                    android:hint="Enter First Name"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/LastName"
                    android:layout_below="@id/firstname"
                    android:hint="Enter Last Name"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/mobile"
                    android:layout_below="@id/LastName"
                    android:hint="Enter mobile number"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/email"
                    android:layout_below="@id/mobile"
                    android:hint="Enter your email address"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:focusable="true"/>
                <EditText
                    android:id="@+id/usercode"
                    android:layout_below="@id/email"
                    android:hint="Enter user Code"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:focusable="true"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/dob"
                    android:layout_below="@id/usercode"
                    android:hint="Date of birth"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:drawableRight="@android:drawable/ic_menu_my_calendar"
                    android:focusable="false"
                    android:clickable="false"
                    android:visibility="gone"/>
                <Spinner
                    android:id="@+id/gender"
                    android:layout_below="@id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:spinnerMode="dialog"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:visibility="gone"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/updaterl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/updatebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PrimaryColor"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal"
            tools:ignore="SpUsage" />
    </RelativeLayout>
</RelativeLayout>